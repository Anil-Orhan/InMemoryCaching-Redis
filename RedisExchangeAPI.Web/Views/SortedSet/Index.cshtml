@model HashSet<string>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Redis Data List</h2>



<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    
    <div class="col-md-6 mt-5"> 
        <input type="text" class="form-control col-sm-5" name="name">
        <input type="number" class="form-control col-sm-5" name="score">
        <div class=" mt-3 d-flex flex-row-reverse bd-highlight"><button class="btn btn-success p-2 px-4 bd-highlight" type="submit">Kaydet</button></div></div>
  
    
    
</form>

<hr class="solid my-5">
<div class="row">
   
    <div class="col-md-6">
<p class="fw-lighter fs-3 text-black text-center mb-5">Tablo</p>
        <table class="table table-dark table-hover table-bordered mt-5">
              <thead>
                            <tr>
                                <th>Index</th>
                                <th>Values</th>
                                <th>Process</th>
            
                            </tr>
                            </thead>
            @{ var count = 0;}

            @foreach (var item in Model)
            {
                count++;

                <tbody>
                <tr>
                    <td class="col-1">@count</td>
                    <td class="col-9">@item</td>
                    <td class="col-2"><a class="btn btn-danger btn-sm mx-3 px-5 py-0 align-text-bottom align-content-center fw-light fs-5 text-decoration-none" asp-controller="SortedSet" asp-action="Remove" asp-route-name="@item">Sil</a></td>
                </tr>
                </tbody>

            }
        </table>
    </div>
 
</div>




